;; toggle input method key configuration
(define default-im-name 'anthy)
(define-key generic-on-key?  '("<Control>\\" "<Control> " "<Shift> " "<Alt> "))
(define-key generic-off-key? '("<Control>\\" "<Control> " "<Shift> " "<Alt> "))
