# .bash_profile

alias lz='ls -Z'

alias path='echo $PATH | sed "s/:/\n/g"'

alias work_dir='echo ~/work/`date +"%Y/%m/%d"`'

alias work='[ ! -d `work_dir` ] && mkdir -p `work_dir`; pushd `work_dir`'

alias memo='[ ! -d `work_dir` ] && mkdir -p `work_dir`; vim `work_dir`/`date +"%Y%m%d.mkd"`'

alias fos='fossil'

alias sbt='sbt -ivy ~/.sbt/repository'

# vim: set ft=sh :
